---
import Base from "@layouts/base.astro";
import AnkerLink from "@components/ui/ankerlink/AnkerLink.tsx";

const link_list = [
  {
    title: "最初のページ",
    href: "/index",
  },
  {
    title: "フラグメントシェーダー系テスト",
    href: "/index2",
  },
  {
    title: "rapierをコンポーネントごとにまとめたパターン",
    href: "/test_shader",
  },
  {
    title: "マテリアルチートシート",
    href: "/test_shader2",
  },
  {
    title: "GLSLにテクスチャ当てたテスト",
    href: "/test_texture1",
  },
  {
    title: "obj練習(csg)_box",
    href: "/test_obj1",
  },
  {
    title: "obj練習失敗(csg)_sphere",
    href: "/test_obj2",
  },
  {
    title: "曇りガラス埋め込みパターン(box)",
    href: "/test_obj4",
  },
  {
    title: "objチートシート",
    href: "/test_objlist",
  },
  {
    title: "曇りガラス再現しようとして大失敗",
    href: "/test_rapier_csg",
  },
  {
    title: "rapier×csgテスト2",
    href: "/test_rapier_csg2",
  },
  {
    title: "rapier×csgテスト3",
    href: "/test_rapier_csg3",
  },
  {
    title: "rapier×csgテスト4(真ん中引力ver)",
    href: "/test_rapier_csg4",
  },
];
---

<Base title="Astro">
  <div>
    <ul class="ankerLink__list">
      {
        link_list.map((link) => (
          <li class="ankerLink__item">
            <AnkerLink href={link.href} text={link.title} />
          </li>
        ))
      }
    </ul>
  </div>
</Base>

<style>
  html,
  body,
  #root {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background: #2b2b33;
  }

  .ankerLink__list {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;

    padding-top: 100px;
    gap: 10px;
  }

  .ankerLink__item {
    a {
      color: #fff;
      text-decoration: none;
      font-size: 20px;
      font-weight: bold;
      transition: 0.3s;
      &:hover {
        color: #ff0;
      }
    }
  }
</style>
